<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="66dp"
            android:layout_height="66dp"
            app:cardCornerRadius="33dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/colorAccent">
            <TextView
                android:id="@+id/patient_no"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:text="11235"
                android:textSize="16dp"
                android:gravity="center"
                android:textColor="#fff"/>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/patient_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="56, Female"
                android:textSize="18dp"
                android:textColor="#212121"
                android:paddingHorizontal="8dp"/>

            <TextView
                android:id="@+id/detection_location"
                android:layout_width="match_parent"
                android:text="Kolkata, West Bengal"
                android:paddingHorizontal="8dp"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/patient_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="8dp"
                    android:layout_weight="1"
                    android:text="31/3/2019"/>
                <TextView
                    android:id="@+id/patient_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="8dp"
                    android:layout_weight="1"
                    android:text="Recovered"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Notes"
                android:textColor="#212121"
                android:paddingHorizontal="8dp" />
            <TextView
                android:id="@+id/patient_notes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Travelled from Italy"
                android:textStyle="italic"
                android:paddingHorizontal="8dp" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>