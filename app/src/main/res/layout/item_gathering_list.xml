<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="66dp"
            android:layout_height="66dp"
            app:cardCornerRadius="33dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/colorAccent">
            <TextView
                android:id="@+id/patient_no"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:text="11235"
                android:textSize="16dp"
                android:gravity="center"
                android:textColor="#fff"/>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="9830695900"
                android:textSize="18dp"
                android:textColor="#212121"
                android:paddingHorizontal="8dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/blood_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="8dp"
                    android:layout_weight="1"
                    android:maxLength="16"
                    android:text="Blood Group: AB+"/>
                <TextView
                    android:id="@+id/pincode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="8dp"
                    android:layout_weight="1"
                    android:maxLength="16"
                    android:text="Pincode: 700085"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gathering Details:"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="18dp"
                        android:paddingTop="6dp"
                        android:paddingHorizontal="8dp" />
                    <TextView
                        android:id="@+id/set_visibility"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+"
                        android:textSize="22dp"
                        android:textStyle="bold"
                        android:textColor="@android:color/holo_blue_dark"
                        android:layout_marginEnd="10dp"
                        android:layout_alignParentEnd="true"/>
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#212121"
                        android:text="Date &amp; Time"
                        android:paddingHorizontal="14dp"
                        android:paddingVertical="5dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="8dp"
                            android:layout_weight="1"
                            android:maxLength="16"
                            android:text="16.02.2020" />

                        <TextView
                            android:id="@+id/time"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:paddingHorizontal="8dp"
                            android:text="Pincode: 700085" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/travel_start"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#212121"
                        android:text="Place &amp; Gathering Size"
                        android:paddingHorizontal="14dp"
                        android:paddingVertical="5dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/place"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="8dp"
                            android:layout_weight="1"
                            android:maxLength="16"
                            android:text="Kolkata" />

                        <TextView
                            android:id="@+id/size"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:maxLength="16"
                            android:paddingHorizontal="8dp"
                            android:text="85" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>