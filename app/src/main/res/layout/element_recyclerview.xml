<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:id="@+id/traveldetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp">
            <View
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="5dp"
                android:background="@drawable/ic_card_travel_black_24dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Travel Details"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginVertical="15dp"
                android:padding="6dp"
                android:textColor="#0091EA"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#0091EA"
            android:layout_marginHorizontal="20dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/from_travel"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@drawable/field_layout"
                        android:layout_margin="20dp"
                        android:hint="From"
                        android:padding="20dp"
                        android:layout_weight="1"
                        android:textAlignment="center"/>
                    <EditText
                        android:id="@+id/to_travel"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@drawable/field_layout"
                        android:layout_margin="20dp"
                        android:hint="To"
                        android:layout_weight="1"
                        android:padding="20dp"
                        android:textAlignment="center"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/depart_date_travel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:hint="Departure Date"
                        android:padding="10dp"
                        android:layout_weight="1"
                        android:textAlignment="center"/>
                    <EditText
                        android:id="@+id/arrival_date_travel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:hint="Arrival Date"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:textAlignment="center"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/depart_time_travel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:hint="Departure Time"
                        android:padding="10dp"
                        android:layout_weight="1"
                        android:textAlignment="center"/>
                    <EditText
                        android:id="@+id/arrival_time_travel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:hint="Arrival Time"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:textAlignment="center"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/traindetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp">
                <View
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginVertical="5dp"
                    android:background="@drawable/ic_train_black_24dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Train Details"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginVertical="15dp"
                    android:padding="6dp"
                    android:textColor="#0091EA"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#0091EA"
                android:layout_marginHorizontal="20dp"/>

                <EditText
                    android:id="@+id/train_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:hint="Enter Train Name"
                    android:padding="10dp"
                    android:layout_marginTop="10dp"/>
                <EditText
                    android:id="@+id/train_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:hint="Enter Train No.(Optional)"
                    android:padding="10dp"/>
                <EditText
                    android:id="@+id/coach_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:hint="Enter Coach No."
                    android:padding="10dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:text="Enter relative position of Coach i.e.\'front \', \'middle\' or \'rear \'with respect to the engine, in case you dont remember the Coach no. "
                android:padding="3dp"
                android:lineSpacingExtra="4dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/flightdetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp">
                <View
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginVertical="5dp"
                    android:background="@drawable/ic_flight_black_24dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Flight Details"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginVertical="15dp"
                    android:padding="6dp"
                    android:textColor="#0091EA"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#0091EA"
                android:layout_marginHorizontal="20dp"/>

            <EditText
                android:id="@+id/flight_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:hint="Enter Flight No."
                android:layout_marginTop="10dp"
                android:padding="10dp"/>
            <EditText
                android:id="@+id/flight_boarding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:hint="Enter Boarding Class"
                android:layout_weight="1"
                android:padding="10dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/Gatheringdetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp">
                <View
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginVertical="5dp"
                    android:background="@drawable/ic_coreteam"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gathering Details"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginVertical="15dp"
                    android:padding="6dp"
                    android:textColor="#0091EA"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#0091EA"
                android:layout_marginHorizontal="20dp"/>

            <EditText
                android:id="@+id/address_gather"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:hint="Enter Address"
                android:layout_weight="1"
                android:padding="10dp"
                android:layout_marginTop="10dp"/>
            <EditText
                android:id="@+id/date_gather"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:hint="Enter Date"
                android:layout_weight="1"
                android:padding="10dp"/>
            <EditText
                android:id="@+id/time_gather"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:hint="Enter time of gathering"
                android:layout_weight="1"
                android:padding="10dp" />
            <EditText
                android:id="@+id/no_gather"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:hint="Approximate people gathered"
                android:layout_weight="1"
                android:padding="10dp" />
        </LinearLayout>

        <Button
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SUBMIT"
            android:padding="15dp"
            android:background="@drawable/background"
            android:layout_marginVertical="30dp"
            android:layout_marginHorizontal="90dp"

            android:textSize="18dp"
            android:textColor="#fff"/>



    </LinearLayout>


</androidx.core.widget.NestedScrollView>